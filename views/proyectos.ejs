<body class="gradient-custom3">
    <div class="content">
        <h2 class="text_shadows">proyectos</h2>
    </div>

    <% if(details!=null) { %>
        <% details.forEach(function(item){ %>
          <div class="scrollbar" id="style-1">
            <div class="container7">
              <div class="row7">
                <div class="column7 left7">
                  <span class="dot7" style="background:#ED594A;"></span>
                  <span class="dot7" style="background:#FDD800;"></span>
                  <span class="dot7" style="background:#5AC05A;"></span>
                </div>
                <div class="column7 middle7">
                  <input type="text" value="http://www.iLabTDI.com" disabled>
                </div>
                <div class="column7 right7">
                  <div style="float:right">
                    <span class="bar7"></span>
                    <span class="bar7"></span>
                    <span class="bar7"></span>
                  </div>
                </div>
              </div>
              <div class="content7">
                <h3>  <%= item.nombre%></h3>
                <h5 style="color: rgb(43, 116, 233);">  Descripcion</h5>
                <p> <%= item.descripcion %></p>
                <h6>Integrantes</h6>
                <% integrantes.forEach(function(integrante){ %>
                  <% if(integrante.nombre_proyecto == item.nombre) { %>
                    <div class="skills">
                      <% if (integrante.img){ %>
                        <img src="./uploads/<%= integrante.img %>" align="right" style="width: 130px; height: 180px; margin-right: 10px;" alt="user" />
                      <% } %>
                      <div class="skills">
                        <h6 style="color: white;">Nombre:</h6>
                        <p style="color: white;"><%= integrante.integrante %></p>
                        <p style="color: white;"><%= integrante.correo %></p>
                        <h6 style="color: white;" >carrera</h6>
                        <p style="color: white;" ><%= integrante.carrera %></p>
                      </div>
                    </div>    
                  <% } %>
                <% }) %>  
                <br>
              </div>
          </div>
          </div>
          <br>
        <% }) %>
    <% } %>

</body>
</html>
